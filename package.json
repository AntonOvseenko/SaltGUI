{
  "name": "saltgui-test",
  "description": "Code linting and testing package for SaltGUI",
  "author": "Martijn Jacobs",
  "version": "0.0.1",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "babel-plugin-istanbul": "^5.1.1",
    "chai": "^4.1.2",
    "eslint": "^7.5.0",
    "mocha": "^5.2.0",
    "nightmare": "^3.0.1",
    "nyc": "^13.3.0",
    "stylelint": "^9.4.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "eslintConfig": {
    "extends": "eslint:all",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "array-element-newline": 0,
      "capitalized-comments": 0,
      "class-methods-use-this": 0,
      "complexity": 0,
      "dot-notation": 0,
      "function-call-argument-newline": 0,
      "function-paren-newline": 0,
      "guard-for-in": 0,
      "id-length": [
        "error",
        { "exceptions": ["i"] }
      ],
      "indent": [
        "error",
        2
      ],
      "init-declarations": 0,
      "max-classes-per-file": 0,
      "max-len": 0,
      "max-lines": 0,
      "max-lines-per-function": 0,
      "max-params": 0,
      "max-statements": 0,
      "multiline-comment-style": 0,
      "multiline-ternary": 0,
      "no-console": 0,
      "no-continue": 0,
      "no-loop-func": 0,
      "no-loss-of-precision": 0,
      "no-magic-numbers": 0,
      "no-mixed-operators": 0,
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2,
          "maxEOF": 1
        }
      ],
      "no-negated-condition": 0,
      "no-param-reassign": 0,
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-ternary": 0,
      "no-undef-init": 0,
      "no-undefined": 0,
      "no-underscore-dangle": 0,
      "no-unused-vars": 0,
      "no-useless-escape": 0,
      "no-var": 2,
      "no-warning-comments": 0,
      "no-whitespace-before-property": 2,
      "object-property-newline": 0,
      "object-shorthand": 0,
      "one-var": 0,
      "padded-blocks": 0,
      "prefer-const": 2,
      "prefer-destructuring": 0,
      "prefer-template": 0,
      "require-unicode-regexp": 0,
      "semi": 2
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "nyc": {
    "check-coverage": false,
    "per-file": true,
    "lines": 85,
    "statements": 85,
    "functions": 85,
    "branches": 85,
    "cache": true,
    "all": true,
    "watermarks": {
      "lines": [
        70,
        90
      ],
      "functions": [
        70,
        90
      ],
      "branches": [
        70,
        90
      ],
      "statements": [
        70,
        90
      ]
    },
    "exclude": [
      "tests/**/*.js",
      "node_modules/**/*.js"
    ],
    "include": [
      "saltgui/static/scripts/**/*.js"
    ]
  },
  "scripts": {
    "eslint": "eslint saltgui/static/scripts tests/",
    "eslint:fix": "eslint saltgui/static/scripts tests/ --fix",
    "stylelint": "stylelint 'saltgui/static/stylesheets/*.css'",
    "wait-for-docker": "node tests/helpers/wait-for-docker.js",
    "test:unit": "mocha --require @babel/register --trace-warnings --check-leaks --reporter spec tests/unit/",
    "test:functional": "mocha --bail --trace-warnings --check-leaks --reporter spec tests/functional/",
    "test:coverage": "nyc mocha --require @babel/register --trace-warnings --check-leaks --reporter spec tests/unit/"
  }
}
